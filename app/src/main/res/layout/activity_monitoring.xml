<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_height="match_parent"
android:orientation="vertical" android:layout_weight="0.8">
<!-- <View
     android:layout_width="match_parent"
     android:layout_height="1dp" android:background="#dddddd"/>-->
<com.google.android.material.tabs.TabLayout
    android:id="@+id/tab_layout"
    android:layout_width="match_parent" app:tabTextAppearance="@style/MyTabLayoutTextAppearance"
    android:layout_height="wrap_content" app:tabIndicatorColor="@color/appcolor" app:tabSelectedTextColor="@color/appcolor"
    app:tabIconTint="@color/appcolor"/>

<androidx.viewpager2.widget.ViewPager2
    android:id="@+id/pager"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1" />

</LinearLayout>